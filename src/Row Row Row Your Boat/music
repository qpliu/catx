% PARTS midi

\header {
    title = "Row, Row, Row Your Boat"
}

#(set-global-staff-size 20)

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"

voAligner = \new NullVoice = "vo" \voPart

layoutmusic = <<
    \tag #'(systemOnePart voPart) \new Staff <<
	\markupStuff
	\voPart
	\voAligner
	\voLyrics
    >>
    \tag #'(systemOnePart drsPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
