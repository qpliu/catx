% PARTS midi
% BIN midi all gg kav susan
% ROLAND WeWillRockY
% ROBOT preview=17

\header {
    title = "We Will Rock You"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 20)
#(set-default-paper-size "letter" 'portrait)

drumPitchNames.slash = #'slash

#(define myDrumStyleTable '(
    (slash          slash    #f          6)
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      harmonic #f          4)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (hightom        default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "drscolors"
\include "vo"
\include "lyrics"
\include "chorus"
\include "choruslyrics"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(ggPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(allPart ggPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(kavPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drscolorsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
