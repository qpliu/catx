% PARTS midi
% BIN midi all gg kav susan

\header {
    title = "We Will Rock You"
}

#(set-global-staff-size 20)

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"

voAligner = \new NullVoice = "vo" \voPart

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\voPart
	\voAligner
	\voLyrics
    >>
    \tag #'(allPart kavPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(ggPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
	\voAligner
	\voLyrics
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
