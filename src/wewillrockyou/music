% drs vo
% system1 chorus
% midi
% roland
% PARTS midi
% MIDIS midiOne

\header {
    title = "We Will Rock You"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 20)
#(set-default-paper-size "letter" 'portrait)

drumPitchNames.slash = #'slash

#(define myDrumStyleTable '(
    (slash          slash    #f          6)
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      harmonic #f          4)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (hightom        default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"
\include "chorus"
\include "choruslyrics"

layoutmusic = <<
    \tag #'(systemOnePart voPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(chorusPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(systemOnePart drsPart chorusPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusicAll = <<
    \markupStuff
    \tag #'(midiOne drsPart) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>

midimusic = <<
    \keepWithTag #'(drsPart keep) \midimusicAll
>>

rolandmusic = <<
    \keepWithTag #'(drsPart keep) \midimusicAll
>>
