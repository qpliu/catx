% BIN midi all kav susan gg peter bass

\header {
    title = "Beat It"
    composer = "Michael Jackson"
}

\include "markup"
\include "generated-backupvo"
\include "generated-bass"
\include "generated-drums"
\include "generated-leadguitar"
\include "generated-lyrics"
\include "generated-rhythmguitar"
\include "generated-sologuitar"
\include "generated-synth"
\include "generated-vo"
\include "karaoke"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\clef "treble_8"
	{ \myVocalsStuff \transpose dis e, \voPart }
	\voLyrics
    >>
    \tag #'(allPart peterPart) <<
	\new Staff \with {
	    instrumentName = \markup { \rotate #90 "Solo Guitar" }
	    shortInstrumentName = \markup { \rotate #90 "S.G." }
	} <<
	    \markupStuff
	    \clef "treble_8"
	    \transpose dis e \sologuitarPart
	>>
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\transpose dis e \sologuitarPart
    >>
    \tag #'(allPart peterPart) <<
	\new Staff \with {
	    instrumentName = \markup { \rotate #90 "Lead Guitar" }
	    shortInstrumentName = \markup { \rotate #90 "L.G." }
	} <<
	    \markupStuff
	    \clef "treble_8"
	    \transpose dis e \leadguitarPart
	>>
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\transpose dis e \leadguitarPart
    >>
    \tag #'(allPart peterPart) <<
	\new Staff \with {
	    instrumentName = \markup { \rotate #90 "Rhythm Guitar" }
	    shortInstrumentName = \markup { \rotate #90 "R.G." }
	} <<
	    \markupStuff
	    \clef "treble_8"
	    \transpose dis e \rhythmguitarPart
	>>
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\transpose dis e \rhythmguitarPart
    >>
    \tag #'(allPart bassPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\transpose dis e \bassPart
    >>
    \tag #'(bassPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\transpose dis e \bassPart
    >>
    \tag #'(allPart kavPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drumsPart
    >>
    \tag #'(ggPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drumsPart
	\voLyrics
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drumsPart
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
    } \transpose dis e, \voPart
    \tag #'(midiTwo) \new Staff \with {
	midiInstrument = #"piccolo" % 72
    } \transpose dis e, \backupvoPart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
    } \transpose dis e \sologuitarPart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
    } \transpose dis e \leadguitarPart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
    } \transpose dis e \rhythmguitarPart
    \tag #'(midiBass) \new Staff \with {
	midiInstrument = #"slap bass 1" % 36
    } \transpose dis e \bassPart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"lead 2 (sawtooth)" % 81
    } \transpose dis e \synthPart
    \tag #'(midiKaraoke) \new Staff <<
	\karaokeLyrics
	\transpose dis e, \voPart
    >>
>>
