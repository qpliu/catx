% drs system1
% midi
% roland
% PARTS midi
% MIDIS midiOne

\header {
    title = "Buddy Holly"
    composer = "Words & Music by Chuk B."
    subsubtitle = "Weezer"
}

\paper {
    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set! paper-alist (cons '("my size" . (cons (* 8 in) (* 11 in))) paper-alist))

%#(set-global-staff-size 24)
%#(set-default-paper-size "my size" 'landscape)

#(set-global-staff-size 20)
#(set-default-paper-size "letter" 'portrait)

#(define myDrumStyleTable '(
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"

drsStaff = \new DrumStaff \with { drumStyleTable = #(alist->hash-table myDrumStyleTable) instrumentName = \markup { \rotate #90 "Dr" } } \drsPart

layoutmusic = <<
    \tag #'(systemOnePart) <<
	\markupStuff
	\drsStaff
    >>
    \tag #'(drsPart) <<
	\markupStuff
	\drsStaff
    >>
>>

midimusicAll = <<
    \markupStuff
    \tag #'(midiOne drsPart) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>

midimusic = <<
    \keepWithTag #'(drsPart keep) \midimusicAll
>>

rolandmusic = <<
    \keepWithTag #'(drsPart keep) \midimusicAll
>>
