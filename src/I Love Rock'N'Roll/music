% PARTS midi
% BIN midi all kav gg susan
% ROBOT preview=19

\header {
    title = "I Love Rock 'N Roll"
    composer = "Joan Jett & the Blackhearts"
}

#(set-global-staff-size 20)

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"

voAligner = \new NullVoice = "vo" \voPart

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff <<
	\markupStuff
	\voPart
	\voAligner
	\voLyrics
    >>
    \tag #'(allPart kavPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(ggPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
	\voAligner
	\voLyrics
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
