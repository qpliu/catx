% PARTS midi
% BIN midi all kav gg susan
% ROBOT preview=19
% ROLAND ILoveRockNR

\header {
    title = "I Love Rock 'N Roll"
    composer = "Joan Jett & the Blackhearts"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 20)
#(set-default-paper-size "letter" 'portrait)

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"
\include "chorus"
\include "choruslyrics"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(ggPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(allPart kavPart ggPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
