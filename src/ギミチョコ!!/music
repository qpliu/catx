% PARTS midi
%% BIN midi all kav susan gg peter

\header {
    title = "ギミチョコ!!"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 16)
#(set-default-paper-size "letter" 'portrait)

\include "markup"
\include "generated-bass"
\include "generated-drs"
\include "generated-guitar1"
\include "generated-guitar2"
\include "generated-guitar3"
\include "generated-guitar4"
\include "generated-synth"
\include "generated-vocals"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\vocalsPart
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Synth" }
	shortInstrumentName = \markup { \rotate #90 "Sy" }
    } <<
	\markupStuff
	\synthPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 1" }
	shortInstrumentName = \markup { \rotate #90 "Gtr1" }
    } <<
	\markupStuff
	\clef "treble_8"
	\guitarOnePart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = \stringTuning <c, f, ais, dis g c'> } <<
	\markupStuff
	\guitarOnePart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 2" }
	shortInstrumentName = \markup { \rotate #90 "Gtr2" }
    } <<
	\markupStuff
	\clef "treble_8"
	\guitarTwoPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = \stringTuning <c, f, ais, dis g c'> } <<
	\markupStuff
	\guitarTwoPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 3" }
	shortInstrumentName = \markup { \rotate #90 "Gtr3" }
    } <<
	\markupStuff
	\clef "treble_8"
	\guitarThreePart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = \stringTuning <c, f, ais, dis g c'> } <<
	\markupStuff
	\guitarThreePart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 4" }
	shortInstrumentName = \markup { \rotate #90 "Gtr4" }
    } <<
	\markupStuff
	\clef "treble_8"
	\guitarFourPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = \stringTuning <c, f, ais, dis g c'> } <<
	\markupStuff
	\guitarFourPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\bassPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = \stringTuning <c,, f,, ais,, dis,> } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(allPart ggPart kavPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiGg rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
    \tag #'(midiSusan rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
    } \vocalsPart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"lead 2 (sawtooth)" % 81
    } \synthPart
    \tag #'(midiOne rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
    } \bassPart
    \tag #'(midiPeter rolandBackOne) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
    } \guitarOnePart
    \tag #'(midiPeter rolandBackOne) \new Staff \with {
	midiInstrument = #"overdriven guitar" % 29
    } \guitarTwoPart
    \tag #'(midiPeter rolandBackOne) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
    } \guitarThreePart
    \tag #'(midiPeter rolandBackOne) \new Staff \with {
	midiInstrument = #"overdriven guitar" % 29
    } \guitarFourPart
>>
