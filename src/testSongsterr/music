\include "generated-bass"
\include "generated-bass-shift"
\include "generated-deadnote"
\include "generated-drs"
\include "generated-lyrics"
\include "generated-vo"
\include "generated-slide"
\include "generated-slidetext_lyrics"
\include "generated-slidetext_midi"
\include "generated-bend"
\include "generated-bendtext_lyrics"
\include "generated-bendtext_midi"

layoutmusic = <<
    \tag #'bassPart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Bass" }
    } <<
	\clef "bass_8"
	\bassPart
    >>
    \tag #'bassPart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass-Shift" }
	shortInstrumentName = \markup { \rotate #90 "Bass-Shift" }
    } <<
	\clef "bass_8"
	\bassShiftPart
    >>
    \tag #'deadnotePart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Deadnote" }
	shortInstrumentName = \markup { \rotate #90 "Deadnote" }
    } <<
	\clef "treble_8"
	\deadnotePart
    >>
    \tag #'deadnotePart \new TabStaff \deadnotePart
    \tag #'drsPart \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drs" }
	shortInstrumentName = \markup { \rotate #90 "Drs" }
    } \drsPart
    \tag #'voPart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vo" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\voPart
	\voLyrics
    >>
    \tag #'slidePart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Slide" }
	shortInstrumentName = \markup { \rotate #90 "Slide" }
    } <<
	\slidePart
	\lyricsslideText
    >>
    \tag #'bendPart \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bend" }
	shortInstrumentName = \markup { \rotate #90 "Bend" }
    } <<
	\bendPart
%	\lyricsbendText
    >>
>>

midimusic = <<
    \tag #'midiOne \new Staff = "generated-slidetext" \midislideText
    \tag #'midiOne \new Staff = "generated-slide" \slidePart
    \tag #'midiOne \new Staff = "generated-bendtext" \midibendText
    \tag #'midiOne \new Staff = "generated-bend" \bendPart
>>
