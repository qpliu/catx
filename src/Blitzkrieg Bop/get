#!/bin/sh
WHERE="application_guitar_pro5-42273187.gp5"
DRUMMAP="41 toml 0,35 bd 1,"
set -e
rm -f generated-*
VLYRICS=`cat vocaloid_lyrics`
java -jar ../../guitarproToLy/1.jar <"$WHERE" \
markup-extra 0 '\key a \major' \
add-lyrics vocaloid 0 16 "$VLYRICS" \
drumMap "$DRUMMAP" \
track 0 \
    preset kav \
    layout-extra '\clef "treble_8"' \
    which-lyrics 0 \
    output-lilypond \
    output-lyrics \
    output-karaoke \
track 0 \
    preset vocaloid \
    which-lyrics vocaloid \
    output-lilypond \
    output-vocaloid \
track 0 \
    preset susan \
    layout-extra '\clef "treble_8"' \
    output-lilypond \
track 2 \
    preset peter \
    output-lilypond \
track 3 \
    preset bass \
    output-lilypond \
track 4 \
    preset gg \
    output-drums \
2>&1|tee log
