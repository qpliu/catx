% midi roland system1 susan
% PARTS susan
% BIN midi system1 susan vodrscolors drs
% ROLAND JungleBoogi
% ROBOT preview=17.3;division=+

\header {
    title = "Jungle Boogie"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 16)
#(set-default-paper-size "letter" 'portrait)

#(define myDrumStyleTable '(
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      cross    "open"      4)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "drscolors"
\include "vo"
\include "eg"
\include "eb1"
\include "eb2"
\include "trumpet"
\include "tenorsax"
\include "altosax"
\include "lyrics"

layoutmusic = <<
    \tag #'(systemOnePart susanPart voPart vodrsPart vodrscolorsPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(systemOnePart egPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\egPart
    >>
    \tag #'(systemOnePart ebOnePart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass 1" }
	shortInstrumentName = \markup { \rotate #90 "Ba1" }
    } <<
	\markupStuff
	\ebOnePart
    >>
    \tag #'(systemOnePart ebTwoPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass 2" }
	shortInstrumentName = \markup { \rotate #90 "Ba2" }
    } <<
	\markupStuff
	\ebTwoPart
    >>
    \tag #'(systemOnePart trumpetPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Trumpet" }
	shortInstrumentName = \markup { \rotate #90 "Tpt" }
    } <<
	\markupStuff
	\trumpetPart
    >>
    \tag #'(systemOnePart susanPart altosaxPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Alto Sax" }
	shortInstrumentName = \markup { \rotate #90 "As" }
    } <<
	\markupStuff
	\altosaxPart
    >>
    \tag #'(systemOnePart tenorsaxPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Tenor Sax" }
	shortInstrumentName = \markup { \rotate #90 "Ts" }
    } <<
	\markupStuff
	\tenorsaxPart
    >>
    \tag #'(systemOnePart drsPart vodrsPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(vodrscolorsPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drscolorsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiEg rolandBackOne) \new Staff \with {
	midiInstrument = #"electric guitar (clean)" % 27
    } \egPart
    \tag #'(midiEb rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
    } \ebOnePart
    \tag #'(midiEb rolandBass) \new Staff \with {
	midiInstrument = #"synth bass 2" % 39
    } \ebTwoPart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"trumpet" % 56
    } \trumpetPart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"tenor sax" % 66
    } \tenorsaxPart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"alto sax" % 65
    } \altosaxPart
>>
