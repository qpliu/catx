% PARTS midi

\header {
    title = "The One I Love"
    composer = "R.E.M."
}

#(set-global-staff-size 20)

\include "markup"
\include "drs"
\include "vo"
\include "lyrics"
\include "chorus"
\include "choruslyrics"

layoutmusic = <<
    \tag #'(systemOnePart voPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(chorusPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(systemOnePart drsPart chorusPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
