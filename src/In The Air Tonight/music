% BIN midi all kav susan gg peter bass
% ROBOT enabled=true

\header {
    title = "In The Air Tonight"
    composer = "Phil Collins"
}

\include "markup"
\include "generated-bass"
\include "generated-celesta"
\include "generated-guitar"
\include "generated-keyboard1"
\include "generated-keyboard2"
\include "generated-vo2"
\include "generated-voecho"
\include "generated-vo"
\include "karaoke"
\include "lyrics"
\include "drums"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\clef "treble_8"
	{ \myVocalsStuff \voPart }
	\voLyrics
    >>
    \tag #'(allPart peterPart) <<
	\new Staff \with {
	    instrumentName = \markup { \rotate #90 "Guitar" }
	    shortInstrumentName = \markup { \rotate #90 "Gtr" }
	} <<
	    \markupStuff
	    \clef "treble_8"
	    \guitarPart
	>>
    >>
    \tag #'(peterPart) \new TabStaff \with {
	stringTunings = #guitar-drop-d-tuning
	instrumentName = \markup { \rotate #90 "Drop D" }
    } <<
	\markupStuff
	\guitarPart
    >>
    \tag #'(allPart bassPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\bassPart
    >>
    \tag #'(bassPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(allPart ggPart kavPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drumsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drumsPart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"pad 2 (warm)" % 89
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \keyboardOnePart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"pad 2 (warm)" % 89
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \keyboardTwoPart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"celesta" % 8
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \celestaPart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"distorted guitar" % 30
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \guitarPart
    \tag #'(midiBass) \new Staff \with {
	midiInstrument = #"electric bass (finger)" % 33
    } \bassPart
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \voPart
    \tag #'(midiTwo) \new Staff \with {
	midiInstrument = #"alto sax" % 65
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \voTwoPart
    \tag #'(midiKaraoke) \new Staff \with {
	midiInstrument = #"flute" % 73
    } <<
	\karaokeLyrics
	\voPart
    >>
>>
