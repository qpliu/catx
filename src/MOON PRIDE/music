\include "pianoStaff1_donetext"
\include "pianoStaff2"
\include "key1"
\include "key1_donetext"
\include "eg1"
\include "eg1_donetext"
\addQuote "eg1" \egOnePart
\include "eg2"
\include "eg2_donetext"
\include "eb"
\include "eb_donetext"
\include "perc"
\include "perc_donetext"
\include "drs"
\include "drs_donetext"
\include "markup2"
\include "eg3"
\include "eg3_donetext"
