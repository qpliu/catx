% PARTS gg
% BIN midi all kav susan gg peter
% ROBOT pickup_measures=1

\header {
    title = "Just Like Heaven"
}

#(set-global-staff-size 20)
% IF gg #(set-global-staff-size 17)

\include "markup"
\include "drs"
\include "vo"
\include "steelpan"
\include "eg1"
\include "eg2"
\include "synth"
\include "piano"
\include "bass"
\include "lyrics"
\include "karaoke"

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\steelpanPart
	\voPart
	\voLyrics
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Synth" }
	shortInstrumentName = \markup { \rotate #90 "Sy" }
    } <<
	\markupStuff
	\synthPart
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Piano" }
	shortInstrumentName = \markup { \rotate #90 "Pi" }
    } <<
	\markupStuff
	\pianoPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 1" }
	shortInstrumentName = \markup { \rotate #90 "Gtr1" }
    } <<
	\markupStuff
	\clef "treble_8"
	\egOnePart
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\egOnePart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar 2" }
	shortInstrumentName = \markup { \rotate #90 "Gtr2" }
    } <<
	\markupStuff
	\clef "treble_8"
	\egTwoPart
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\egTwoPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\bassPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(allPart ggPart kavPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"synthstrings 1"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \synthPart
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"electric grand"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \pianoPart
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \bassPart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"overdriven guitar"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \egOnePart
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"electric guitar (clean)"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \egTwoPart
    \tag #'(midiKaraoke) \karaokeLyrics
>>
