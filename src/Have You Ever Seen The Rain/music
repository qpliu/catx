% PARTS peter
% BIN midi all susan kav gg peter
% ROLAND HaveYouEver
% ROBOT preview=8.2;countat=5

\header {
    title = "Have You Ever Seen The Rain"
    composer = "Creedence Clearwater Revival"
}

\paper {
    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 18)
#(set-default-paper-size "letter" 'portrait)

drumPitchNames.slash = #'slash

#(define myDrumStyleTable '(
    (slash          slash    #f          6)
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      harmonic #f          4)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (hightom        default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "bass"
\include "eg"
\include "vo"
\include "lyrics"
\include "lyricsunfolded"
\include "simplevo"
\include "simplelyrics"
\include "simplelyricsunfolded"

layoutmusic = <<
    \tag #'(allPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\simplevoPart
	\simplevoLyrics
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\clef treble_8
	\egPart
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\egPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef bass_8
	\bassPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(allPart ggPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(kavPart) \removeWithTag #'(removeWithUnfold) \unfoldRepeats \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\simplevoPart
	\simplevoLyricsunfolded
    >>
    \tag #'(kavPart) \removeWithTag #'(removeWithUnfold) \unfoldRepeats \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiEb rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \bassPart
    \tag #'(midiEg rolandBackOne) \new Staff \with {
        midiInstrument = #"electric guitar (clean)" % 27
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \egPart
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
