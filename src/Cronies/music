% BIN

\header {
    title = "Cronies"
    composer = "music by Jimi Hendrix"
}

\include "markup"
\include "guitar"
\include "bass"
\include "drums"
\include "vocals"
\include "lyrics"

voAligner = \new NullVoice = "vo" \vocals

layoutmusic = <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	{ \myVocalsStuff \vocals }
	\voAligner
	\voLyrics
    >>
    \tag #'(allPart peterPart gitPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\clef "treble_8"
	\guitar
    >>
    \tag #'(peterPart gitPart) \new TabStaff <<
	\markupStuff
	\guitar
    >>
    \tag #'(allPart peterPart bassPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\bass
    >>
    \tag #'(peterPart bassPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\bass
    >>
    \tag #'(allPart kavPart ggPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drum
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiGg) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drum
    \tag #'(midiSusan) \new Staff \with {
	midiInstrument = #"steel drums"
    } \vocals
    \tag #'(midiOne) \new Staff \with {
	midiInstrument = #"electric bass (finger)"
    } \bass
    \tag #'(midiPeter) \new Staff \with {
	midiInstrument = #"overdriven guitar"
    } \guitar
>>
