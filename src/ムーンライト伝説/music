% PARTS midi
% BIN midi all kav gg susan peter
% ROBOT preview=1.4;pickup_measures=1

\header {
    title = "ムーンライト伝説"
}

\paper {
    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 18)
% IF gg #(set-global-staff-size 19)
#(set-default-paper-size "letter" 'portrait)

#(define myDrumStyleTable '(
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      cross    "open"      4)
    (hihat          cross    #f          4)
    (hightom        default  #f          3)
    (snare          default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "simpledrs"
\include "vo"
\include "vorests"
\include "steelpan"
\include "lyrics"
\include "lyricsj"
\include "bass"
\include "eg"
\include "egtext_lyrics"
\include "egtext_midi"
\include "piano"

layoutmusic = \removeWithTag #'(pageNumber textLyrics) <<
    \tag #'(allPart kavPart susanPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\voPart
	\voLyrics
	\steelpanPart
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Piano" }
	shortInstrumentName = \markup { \rotate #90 "Pi" }
    } <<
	\markupStuff
	\pianoPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\clef "treble_8"
	\egPart
	\lyricsegText
    >>
    \tag #'(peterPart) \new TabStaff <<
	\markupStuff
	\egPart
    >>
    \tag #'(allPart peterPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\clef "bass_8"
	\bassPart
    >>
    \tag #'(peterPart) \new TabStaff \with { stringTunings = #bass-tuning } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(allPart ggPart kavPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\simpledrsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiSusan rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiOne rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (finger)"
	midiMinimumVolume = #1
	midiMaximumVolume = #1
    } \bassPart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"fx 5 (brightness)"
    } \pianoPart
    \tag #'(midiPeter rolandBackOne) \new Staff = "egtext" \midiegText
    \tag #'(midiPeter rolandBackOne) \new Staff = "eg" \egPart
    \tag #'(midiGg rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \simpledrsPart
>>
