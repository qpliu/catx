% drs vo chorus
% system1 chorussystem
% midi
% roland
% PARTS midi
% BIN midi system1 vo vodrscolors drs
% ROLAND HardestButt

\header {
    title = "Hardest Button To Button"
    composer = "The White Stripes"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 20)
#(set-default-paper-size "letter" 'portrait)

\include "markup"
\include "drs"
\include "drscolors"
\include "vo"
\include "lyrics"
\include "chorus"
\include "choruslyrics"

layoutmusic = <<
    \tag #'(systemOnePart voPart vodrscolorsPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\voPart
	\voLyrics
    >>
    \tag #'(chorussystemPart chorusPart) \new Staff \with { \RemoveEmptyStaves } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(systemOnePart chorussystemPart drsPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(vodrscolorsPart) \new DrumStaff \with {
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drscolorsPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums" % 114
    } <<
	\voPart
	\chorusPart
    >>
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
