#!/bin/sh
set -e
WHERE="a.gp5"
rm -f generated-*
LYRICS=`cat lyrics`
VLYRICS=`cat vocaloid_lyrics`
SCALE="c cis d ees e f fis g gis a bes b"
java -jar ../../guitarproToLy/1.jar <"$WHERE" \
add-lyrics vocaloid 0 6 "$VLYRICS" \
scale "$SCALE" \
modified-filename drs \
track 0 \
    preset kav \
    which-lyrics 0 \
    output-lilypond \
    output-lyrics \
    output-karaoke \
track 0 \
    preset vocaloid \
    which-lyrics vocaloid \
    output-lilypond \
    output-vocaloid \
track 1 \
    preset susan \
    layout-extra '\clef "treble_8"' \
    output-lilypond \
track 2 \
    preset midiOne \
    output-lilypond \
track 3 \
    preset midiOne \
    output-lilypond \
track 4 \
    preset midiOne \
    output-lilypond \
track 5 \
    preset peter \
    output-dotext \
    output-lilypond \
track 6 \
    preset peter \
    output-lilypond \
track 7 \
    preset peter \
    output-dotext \
    output-lilypond \
track 8 \
    preset bass \
    output-lilypond \
track 9 \
    preset gg \
    output-drums \
2>&1|tee log
