#!/bin/sh
set -e
WHERE="application_guitar_pro5-42928401.gp5"
DRUMMAP="44 hh 0,35 bd 1,43 tomml 0,"
rm -f generated-*
VLYRICS=`cat vocaloid_lyrics`
SCALE="c des d ees e f ges g aes a bes b"
java -jar ../../guitarproToLy/1.jar <"$WHERE" \
add-lyrics vocaloid 0 1 "$VLYRICS" \
drumMap "$DRUMMAP" \
markup-extra 0 '\key f \minor' \
track 0 \
    preset kav \
    output-lilypond \
    output-lyrics \
    output-karaoke \
    which-lyrics 0 \
track 0 \
    preset vocaloid \
    which-lyrics vocaloid \
    output-lilypond \
    output-vocaloid \
track 0 \
    preset susan \
    output-lilypond \
track 1 \
    preset peter \
    output-lilypond \
    output-chords \
track 2 \
    preset peter \
    output-lilypond \
    output-dotext \
    output-chords \
track 3 \
    preset peter \
    output-lilypond \
    output-dotext \
track 4 \
    preset peter \
    output-lilypond \
    output-dotext \
track 5 \
    preset bass \
    output-lilypond \
    output-dotext \
track 7 \
    preset gg \
    output-drums \
2>&1|tee log
