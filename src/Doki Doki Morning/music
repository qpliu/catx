% PARTS midi
% BIN midi all
% ROLAND DokiDokiMor
% ROBOT preview=7

\header {
    title = "ド・キ・ド・キ☆モーニング"
    composer = "Lyric:ナカメタル Music:のりぞー,村カワ基成"
}

drumPitchNames.noise = #'noise
midiDrumPitches.noise = a' % 69
drumPitchNames.tomm = #'himidtom

#(define myDrumStyleTable '(
    (ridecymbal     cross    #f          7)
    (crashcymbal    cross    #f          6)
    (hihat          cross    #f          5)
    (openhihat      cross    "open"      5)
    (closedhihat    cross    "stopped"   5)
    (halfopenhihat  cross    "halfopen"  5)
    (himidtom       default  #f          2)
    (snare          default  #f          1)
    (handclap       cross    #f          0)
    (noise          default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "chords"
\include "vocal"
\include "vocaltext_lyrics"
\include "vocaltext_midi"
\include "chorus"
\include "vocallyrics"
\include "choruslyrics"
\include "guitar1"
\include "guitar1text_lyrics"
\include "guitar1text_midi"
\addQuote "guitar1" \guitarOnePart
\addQuote "lyricsguitar1" \lyricsguitarOneText
\addQuote "midiguitar1" \midiguitarOneText
\include "guitar2"
\include "guitar2text_lyrics"
\include "guitar2text_midi"
\include "guitar3"
\include "keyboard"
\include "bass"
\include "basstext_lyrics"
\include "basstext_midi"
\include "drums"
\include "drumstext_lyrics"
\include "drumstext_midi"
\include "percussion"
\include "percussiontext_lyrics"
\include "percussiontext_midi"

layoutmusic = \removeWithTag #'(pageNumber textLyrics) <<
    \new ChordNames \mychords
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Chorus"
	shortInstrumentName = "Ch"
    } <<
	\markupStuff
	\chorusPart
	\chorusLyrics
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Vocal"
	shortInstrumentName = "Vo"
    } <<
	\markupStuff
	\vocalPart
	\vocalLyrics
	\lyricsvocalText
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Guitar1"
	shortInstrumentName = "Gt.1"
    } <<
	\markupStuff
	\guitarOnePart
	\tag #'(textLyrics keep) \lyricsguitarOneText
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Guitar2"
	shortInstrumentName = "Gt.2"
    } <<
	\markupStuff
	\guitarTwoPart
	\tag #'(textLyrics keep) \lyricsguitarTwoText
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Guitar3"
	shortInstrumentName = "Gt.3"
    } <<
	\markupStuff
	\guitarThreePart
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Keyboard"
	shortInstrumentName = "Keyb"
    } <<
	\markupStuff
	\keyboardPart
    >>
    \tag #'(allPart) \new Staff \with {
	instrumentName = "Bass"
	shortInstrumentName = "Ba"
    } <<
	\markupStuff
	\bassPart
	\tag #'(textLyrics keep) \lyricsbassText
    >>
    \tag #'(allPart) \new DrumStaff \with {
	instrumentName = "Drums"
	shortInstrumentName = "Dr"
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drumsPart
	\tag #'(textLyrics keep) \lyricsdrumsText
    >>
    \tag #'(allPart) \new DrumStaff \with {
	instrumentName = "Percussion"
	shortInstrumentName = "Perc"
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\override Staff.StaffSymbol.line-positions = #'( 0 )
	\override Staff.BarLine.bar-extent = #'(-1.5 . 1.5)
	\markupStuff
	\percussionPart
	\tag #'(textLyrics keep) \lyricspercussionText
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"choir aahs"
	midiMinimumVolume = #0
	midiMaximumVolume = #.6
    } \chorusPart
    \tag #'(midiVo rolandMelody) \new Staff = "vocaltext" \midivocalText
    \tag #'(midiVo rolandMelody) \new Staff = "vocal" \vocalPart
    \tag #'(midiEg rolandBackOne) \new Staff = "guitar1text" \midiguitarOneText
    \tag #'(midiEg rolandBackOne) \new Staff = "guitar1" \guitarOnePart
    \tag #'(midiEg rolandBackOne) \new Staff = "guitar2text" \midiguitarTwoText
    \tag #'(midiEg rolandBackOne) \new Staff = "guitar2" \guitarTwoPart
    \tag #'(midiEg rolandBackOne) \new Staff \with {
	midiInstrument = #"electric guitar (clean)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \guitarThreePart
    \tag #'(midiOne rolandBackTwo) \new Staff \with {
	midiInstrument = #"pad 3 (polysynth)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.7
    } \keyboardPart
    \tag #'(midiEb rolandBass) \new Staff = "basstext" \midibassText
    \tag #'(midiEb rolandBass) \new Staff = "bass" \bassPart
    \tag #'(midiDr rolandDrums) \new Staff = "drumstext" \mididrumsText
    \tag #'(midiDr rolandDrums) \new DrumStaff = "drums" \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drumsPart
    \tag #'(midiOne rolandPerc) \new Staff = "percussiontext" \midipercussionText
    \tag #'(midiOne rolandPerc) \new DrumStaff = "percussion" \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \percussionPart
>>
