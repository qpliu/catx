% system1 vo vodrscolors drs
% midi
% roland
% PARTS midi
% BIN midi system1 vo vodrscolors drs
% MIDIS midiVo midiEg midiEb midiDr midiOthers
% ROLAND ComeAsYouAr
% ROBOT preview=10

\header {
    title = "Come As You Are"
}

\paper {
%    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 18)
% IF vo #(set-global-staff-size 17)

#(set-default-paper-size "letter" 'portrait)

\include "markup"
\include "drs"
\include "drscolors"
\include "vo"
\include "steelpan"
\include "eg"
\include "bass"
\include "lyrics"

layoutmusic = <<
    \tag #'(systemOnePart voPart vodrscolorsPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\voPart
	\voLyrics
	\steelpanPart
    >>
    \tag #'(systemOnePart egPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\egPart
    >>
    \tag #'(systemOnePart bassPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(systemOnePart drsPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(vodrscolorsPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drscolorsPart
    >>
>>

midimusicAll = <<
    \markupStuff
    \tag #'(midiDr drsPart) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
    \tag #'(midiVo voPart) \new Staff \with {
	midiInstrument = #"steel drums"
    } \voPart
    \tag #'(midiEb bassPart) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
    } \bassPart
    \tag #'(midiEg egPart) \new Staff \with {
	midiInstrument = #"electric guitar (clean)" % 27
    } \egPart
>>

midimusic = <<
    \midimusicAll
>>

rolandmusic = <<
    \markupStuff
    \tag #'(rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums" % 114
    } <<
	\voPart
    >>
    \tag #'(rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
    } \bassPart
    \tag #'(rolandBackOne) \new Staff \with {
	midiInstrument = #"electric guitar (clean)" % 27
    } \egPart
    \tag #'(rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
