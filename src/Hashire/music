midimusic = <<
    \markupStuff
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"synth voice"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiVo rolandMelody) \new Staff \with {
	midiInstrument = #"choir aahs"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \choPart
    \tag #'(midiOne rolandBackTwo) \new Staff = "key1text" \midikeyOneText
    \tag #'(midiOne rolandBackTwo) \new Staff = "key1" \keyOnePart
    \tag #'(midiOne rolandBackTwo) \new Staff = "key2text" \midikeyTwoText
    \tag #'(midiOne rolandBackTwo) \new Staff = "key2" \keyTwoPart
    \tag #'(midiOne rolandBackTwo) \new Staff = "key3text" \midikeyThreeText
    \tag #'(midiOne rolandBackTwo) \new Staff = "key3" \keyThreePart
    \tag #'(midiOne rolandBackTwo) \new Staff = "key4text" \midikeyFourText
    \tag #'(midiOne rolandBackTwo) \new Staff = "key4" \keyFourPart
    \tag #'(midiEg rolandBackOne) \new Staff = "eg1text" \midiegOneText
    \tag #'(midiEg rolandBackOne) \new Staff = "eg1" \egOnePart
    \tag #'(midiEg rolandBackOne) \new Staff = "eg2text" \midiegTwoText
    \tag #'(midiEg rolandBackOne) \new Staff = "eg2" \egTwoPart
    \tag #'(midiEb rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (finger)"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \ebPart
    \tag #'(midiTwo rolandPerc) \new Staff = "perctext" \midipercText
    \tag #'(midiTwo rolandPerc) \new DrumStaff = "perc" \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    }\percPart
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
	midiMinimumVolume = #0
	midiMaximumVolume = #.7
    } \drsPart
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key5text" \midikeyFiveText
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key5" \keyFivePart
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key6text" \midikeySixText
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key6" \keySixPart
    \tag #'(midiTwo rolandBackTwo) \new Staff \with {
	midiInstrument = #"lead 1 (square)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.4
    } \keySevenPart
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key8text" \midikeyEightText
    \tag #'(midiTwo rolandBackTwo) \new Staff = "key8" \keyEightPart
>>
