% drs1 drs2
% system1
% midi
% roland
% PARTS midi
% ROLAND Duet1

\header {
    title = "Duet1"
}

drumPitchNames.rim = #'sidestick

#(define myDrumStyleTable '(
    (sidestick        cross    #f          3)
))

\include "markup"
\include "drs1"
\include "drs2"

layoutmusic = <<
    \tag #'(systemOnePart drsOnePart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drs.1" }
	shortInstrumentName = \markup { \rotate #90 "Drs.1" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsOnePart
    >>
    \tag #'(systemOnePart drsTwoPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drs.1" }
	shortInstrumentName = \markup { \rotate #90 "Drs.1" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsTwoPart
    >>
>>

midimusic = <<
    \markupStuff
    \tag #'(midiDr rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \drsOnePart
    \tag #'(midiOne rolandPerc) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \drsTwoPart
>>
