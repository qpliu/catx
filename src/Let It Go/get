#!/bin/sh
WHERE="/share/mirror/songsterr/stuff/d-keep/d-Lig/d-lig-s475342/d-r423582/application_guitar_pro5-43886298.gp5"
DRUMMAP="42 hho 0,44 hh 0,51 cymc 0,37 sn 0,"
set -e
rm -f generated-*
LYRICS=`cat lyrics`
SCALE="c des d ees e f fis g aes a bes b"
SCALE2="c cis d ees e f fis g gis a bes b"
java -jar ../../guitarproToLy/1.jar <"$WHERE" \
add-lyrics 0 1 "$LYRICS" \
scale "$SCALE" \
drumMap "$DRUMMAP" \
track 0 \
    preset kav \
    output-lilypond \
    output-lyrics \
    output-karaoke \
    transpose "\transpose c c' " \
track 1 \
    scale "$SCALE2" \
    preset susan \
    output-lilypond \
track 4 \
    preset peter \
    output-lilypond \
track 5 \
    preset bass \
    output-dotext \
    output-lilypond \
track 2 \
    preset midiOne \
    output-lilypond \
track 3 \
    preset midiOne \
    output-lilypond \
track 6 \
    preset midiOne \
    output-lilypond \
track 7 \
    preset midiOne \
    output-lilypond \
track 8 \
    preset gg \
    output-drums \
2>&1|tee log
