% drs vo simplevo vodrs
% system1 simplesystem1
% midi
% roland
% PARTS midi
% BIN midi system1 vodrs vodrscolorsunfolded vo
% MIDIS midiVo midiEg midiEb midiDr midiOthers
% ROLAND HaveYouEver
% ROBOT preview=8.2,countat=5

\header {
    title = "Have You Ever Seen The Rain"
    composer = "Creedence Clearwater Revival"
}

\paper {
    system-system-spacing = #'((basic-distance . 12) (minimum-distance . 8) (padding . 1) (stretchability . 60))
}

#(set-global-staff-size 18)
#(set-default-paper-size "letter" 'portrait)

drumPitchNames.slash = #'slash

#(define myDrumStyleTable '(
    (slash          slash    #f          6)
    (ridecymbal     cross    #f          5)
    (crashcymbal    cross    #f          6)
    (openhihat      harmonic #f          4)
    (hihat          cross    #f          4)
    (snare          default  #f          1)
    (hightom        default  #f          1)
    (lowmidtom      default  #f          0)
    (lowtom         default  #f          -1)
    (bassdrum       default  #f          -3)
))

\include "markup"
\include "drs"
\include "drscolors"
\include "vo"
\include "lyrics"
\include "lyricsunfolded"
\include "bass"
\include "eg"
\include "simplevo"
\include "simplelyrics"
\include "simplelyricsunfolded"

layoutmusic = <<
    \tag #'(systemOnePart voPart vodrsPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\simplevoPart
	\simplevoLyrics
    >>
    \tag #'(systemOnePart egPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Guitar" }
	shortInstrumentName = \markup { \rotate #90 "Gtr" }
    } <<
	\markupStuff
	\egPart
    >>
    \tag #'(systemOnePart bassPart) \new Staff \with {
	instrumentName = \markup { \rotate #90 "Bass" }
	shortInstrumentName = \markup { \rotate #90 "Ba" }
    } <<
	\markupStuff
	\bassPart
    >>
    \tag #'(systemOnePart drsPart vodrsPart) \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drsPart
    >>
    \tag #'(vodrscolorsunfoldedPart) \removeWithTag #'(removeWithUnfold) \unfoldRepeats \new Staff \with {
	instrumentName = \markup { \rotate #90 "Vocals" }
	shortInstrumentName = \markup { \rotate #90 "Vo" }
    } <<
	\markupStuff
	\simplevoPart
	\simplevoLyricsunfolded
    >>
    \tag #'(vodrscolorsunfoldedPart) \removeWithTag #'(removeWithUnfold) \unfoldRepeats \new DrumStaff \with {
	instrumentName = \markup { \rotate #90 "Drums" }
	shortInstrumentName = \markup { \rotate #90 "Dr" }
	drumStyleTable = #(alist->hash-table myDrumStyleTable)
    } <<
	\markupStuff
	\drscolorsPart
    >>
>>

midimusicAll = <<
    \markupStuff
    \tag #'(midiVo voPart) \new Staff \with {
	midiInstrument = #"steel drums"
	midiMinimumVolume = #0
	midiMaximumVolume = #1
    } \voPart
    \tag #'(midiEb bassPart) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \bassPart
    \tag #'(midiEg bassPart) \new Staff \with {
        midiInstrument = #"electric guitar (clean)" % 27
	midiMinimumVolume = #0
	midiMaximumVolume = #.5
    } \egPart
    \tag #'(midiDr drsPart) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>

midimusic = <<
    \midimusicAll
>>

rolandmusic = <<
    \markupStuff
    \tag #'(rolandMelody) \new Staff \with {
	midiInstrument = #"steel drums" % 114
    } <<
	\voPart
    >>
    \tag #'(rolandBass) \new Staff \with {
	midiInstrument = #"electric bass (pick)"
    } \bassPart
    \tag #'(rolandBackOne) \new Staff \with {
	midiInstrument = #"synthstrings 2" % 51
    } <<
    >>
    \tag #'(rolandBackTwo) \new Staff \with {
	midiInstrument = #"overdriven guitar"
    } <<
    >>
    \tag #'(rolandDrums) \new DrumStaff \with {
	drumPitchTable = #(alist->hash-table midiDrumPitches)
    } \drsPart
>>
